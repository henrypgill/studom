{
  "name": "@hpgturbostarter/server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "USE_DEV_DB=true bun --watch run src/server.ts",
    "start:ts": "bun run src/server.ts",
    "clean": "rimraf ./dist",
    "bake": "bun clean; bun build --target=bun ./src/server.ts --outdir=./dist",
    "serve": "bun run dist/server.js",
    "distribute": "bun bake; bun serve",
    "type-check": "tsc --noEmit",
    "type-check:watch": "bun type-check --watch",
    "test": "bun test",
    "test:dev": "bun test --watch",
    "format": "bun run prettier --write ./src",
    "format:check": "bun run prettier --check ./src",
    "lint": "bun run eslint ./src"
  },
  "devDependencies": {
    "@hpgturbostarter/eslint-config-custom": "workspace:*",
    "@hpgturbostarter/tsconfig": "workspace:*",
    "@hpgturbostarter/database": "workspace:*",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/morgan": "^1.9.6",
    "@types/pg": "^8.10.3"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  }
}
